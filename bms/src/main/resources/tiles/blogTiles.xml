<tiles-definitions>
	<definition name="mainLayout" template="/WEB-INF/views/common/mainLayout.jsp">	<!-- 메인 홈 레이아웃 -->
		<put-attribute name="header" value="/WEB-INF/views/common/mainHeader.jsp"></put-attribute>	<!-- 메인 홈 상단 -->
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp"></put-attribute>	<!-- 홈 하단 -->
	</definition>
	
	<definition name="detailLayout" template="/WEB-INF/views/common/detailLayout.jsp"> <!-- 개인 블로그 레이아웃 -->
		<put-attribute name="header" value="/WEB-INF/views/common/detailHeader.jsp"></put-attribute> <!-- 개인 블로그 헤더 -->
		<put-attribute name="side" value="/WEB-INF/views/common/detailSide.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp"></put-attribute>
	</definition>
	
	
	<definition name="/mainHome" extends="mainLayout">	<!-- 메인 홈페이지 -->
	<put-attribute name="content" value="/WEB-INF/views/mainHome.jsp"></put-attribute>
		<put-attribute name="title" value="심플로그"></put-attribute>
	</definition>
	
	<definition name="/blog" extends="detailLayout">	<!-- 개인 블로그 -->
		<put-attribute name="content" value="/WEB-INF/views/detailBlog.jsp"></put-attribute>
		<put-attribute name="title" value="blog"></put-attribute>
	</definition>
	
	<definition name="member/login" extends="mainLayout"> <!-- 회원 로그인 -->
		<put-attribute name="content" value="/WEB-INF/views/login.jsp"></put-attribute>
		<put-attribute name="title" value="심플로그 로그인"></put-attribute>
	</definition>
	
	<definition name="member/register" extends="mainLayout">	<!-- 회원가입 -->
		<put-attribute name="content" value="/WEB-INF/views/register.jsp"></put-attribute>
		<put-attribute name="title" value="심플로그 회원가입"></put-attribute>
	</definition>
</tiles-definitions>